<div class="section article">
  <div class="header">
    <h1><%= @entry.title %></h1>
    <div class="info">
      <span class="date"><%= l @entry.created_at %></span>
      <% unless @entry.category.nil? %>
      <span class="category"><a href="<%= @entry.category.link %>"><%= @entry.category.title %></a></span>
      <% end %>
      <% unless @entry.tags.size.zero? %>
      <span class="tags"><%= @entry.tags_to_html %></span>
      <% end %>
    </div>
  </div>
  <div class="body">
    <%= @entry.body %>
  </div>
  <div class="admin-footer">
    <% if logged_in? %>
    <p><a href="<%= @entry.edit_link %>"><%= t('edit') %></a></p>
    <% end %>
  </div>
  <!-- X:S ZenBackWidget --><script type="text/javascript">document.write(unescape("%3Cscript")+" src='http://widget.zenback.jp/?base_uri=http%3A//moji.yayugu.net&nsid=93200937694265985%3A%3A100854354667410348&rand="+Math.ceil((new Date()*1)*Math.random())+"' type='text/javascript'"+unescape("%3E%3C/script%3E"));</script><!-- X:E ZenBackWidget -->

  <div class="comment-wrap">
    <% if @entry.comments.size > 0 %>
    <h3>
      <%= t('comments') %>
    </h3>
    <ul id="comments">
      <% @entry.comments.reverse.each do |comment| %>
        <li id="comment-<%= comment.id %>" class="comment">
          <div class="body">
            <%= hbr comment.body %>
          </div>
          <div class="footer">
            <span class="name">
              <%= link_to comment.name, comment.homepage, :unless => comment.homepage.blank? %>
            </span>
            <span class="date">
              <%= l(comment.created_at) %>
            </span>
          </div>
        </li>
      <% end %>
    </ul>
    <% end %>

    <div id="comment_form">
      <%= comment_form %>
    </div>
  </div>
</div>
